{
  "name": "LTX Video",
  "description": "LTX Video generation workflow for text-to-video",
  "enableInSimple": true,
  "workflow": {},
  "prompt": {
    "1": {
      "class_type": "CheckpointLoaderSimple",
      "inputs": {
        "ckpt_name": "${model}"
      }
    },
    "2": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "text": "${prompt}",
        "clip": ["1", 1]
      }
    },
    "3": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "text": "${negative_prompt}",
        "clip": ["1", 1]
      }
    },
    "4": {
      "class_type": "EmptyLatentVideo",
      "inputs": {
        "width": "${width}",
        "height": "${height}",
        "length": "${frames}",
        "batch_size": 1
      }
    },
    "5": {
      "class_type": "KSampler",
      "inputs": {
        "model": ["1", 0],
        "positive": ["2", 0],
        "negative": ["3", 0],
        "latent_image": ["4", 0],
        "seed": "${seed}",
        "steps": "${steps}",
        "cfg": "${cfg_scale}",
        "sampler_name": "${sampler}",
        "scheduler": "${scheduler}",
        "denoise": 1.0
      }
    },
    "6": {
      "class_type": "VAEDecode",
      "inputs": {
        "samples": ["5", 0],
        "vae": ["1", 2]
      }
    },
    "7": {
      "class_type": "SaveAnimatedWEBP",
      "inputs": {
        "images": ["6", 0],
        "filename_prefix": "ERI_Video",
        "fps": "${fps}",
        "lossless": false,
        "quality": 85,
        "method": "default"
      }
    }
  },
  "customParams": {
    "prompt": {
      "name": "Prompt",
      "type": "text",
      "description": "Describe the video you want to generate",
      "default": "a beautiful nature scene with flowing water, cinematic motion",
      "group": "Core"
    },
    "negative_prompt": {
      "name": "Negative Prompt",
      "type": "text",
      "description": "What to avoid in the video",
      "default": "static, blurry, low quality, distorted",
      "group": "Core"
    },
    "seed": {
      "name": "Seed",
      "type": "integer",
      "description": "Random seed (-1 for random)",
      "default": -1,
      "min": -1,
      "max": 2147483647,
      "group": "Core"
    },
    "steps": {
      "name": "Steps",
      "type": "integer",
      "description": "Number of sampling steps",
      "default": 25,
      "min": 1,
      "max": 100,
      "group": "Sampling"
    },
    "cfg_scale": {
      "name": "CFG Scale",
      "type": "decimal",
      "description": "Classifier-free guidance scale (LTX uses low CFG)",
      "default": 3.0,
      "min": 1.0,
      "max": 15.0,
      "step": 0.5,
      "group": "Sampling"
    },
    "width": {
      "name": "Width",
      "type": "integer",
      "description": "Video width in pixels",
      "default": 768,
      "min": 256,
      "max": 1280,
      "step": 64,
      "group": "Dimensions"
    },
    "height": {
      "name": "Height",
      "type": "integer",
      "description": "Video height in pixels",
      "default": 512,
      "min": 256,
      "max": 1280,
      "step": 64,
      "group": "Dimensions"
    },
    "frames": {
      "name": "Frames",
      "type": "integer",
      "description": "Number of frames to generate",
      "default": 97,
      "min": 9,
      "max": 257,
      "step": 8,
      "group": "Video"
    },
    "fps": {
      "name": "FPS",
      "type": "integer",
      "description": "Frames per second for output",
      "default": 24,
      "min": 8,
      "max": 60,
      "group": "Video"
    },
    "sampler": {
      "name": "Sampler",
      "type": "dropdown",
      "description": "Sampling algorithm",
      "default": "euler_ancestral",
      "values": ["euler", "euler_ancestral", "dpmpp_2m", "dpmpp_sde"],
      "group": "Sampling",
      "advanced": true
    }
  },
  "paramValues": {
    "prompt": "a beautiful nature scene with flowing water, cinematic motion",
    "negative_prompt": "static, blurry, low quality, distorted",
    "seed": -1,
    "steps": 25,
    "cfg_scale": 3.0,
    "width": 768,
    "height": 512,
    "frames": 97,
    "fps": 24,
    "sampler": "euler_ancestral",
    "scheduler": "normal",
    "batch_size": 1,
    "model": ""
  },
  "tags": ["video", "ltx", "text2video"]
}
